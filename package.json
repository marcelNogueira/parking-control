{
  "name": "parking_control",
  "version": "0.1.0",
  "description": "typescript backend test for mLabs",
  "main": "dist/main/server.js",
  "scripts": {
    "postinstall": "husky install",
    "prestart": "prisma migrate up --create-db --experimental",
    "start": "node dist/main/server.js",
    "build": "npm run pre-build && rimraf dist && tsc -p tsconfig-build.json && npm run copy-schema",
    "pre-build": "ts-json-schema-generator -p \"./src/domain/models/**/*.ts\" --out \"./src/utils/validators/schema.json\"",
    "copy-schema": "cpx ./src/utils/validators/schema.json ./dist/utils/validators",
    "dev": "npm run build && nodemon ./dist/main/server.js",
    "db-up": "docker-compose -f docker-compose-db.yml up -d && npm run prestart",
    "db-down": "docker-compose -f docker-compose-db.yml down",
    "docker-up": "npm run build && docker-compose up -d",
    "docker-down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "jest --passWithNoTests --noStackTrace",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:ci": "npm test -- --coverage",
    "test:unit:verbose": "jest --passWithNoTests --runInBand --watch -c jest-unit-config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+link"
  },
  "author": "jmNogueira",
  "license": "",
  "homepage": "",
  "devDependencies": {
    "@prisma/cli": "2.12.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "cpx": "^1.5.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.2",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-json-schema-generator": "^0.87.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@prisma/client": "2.12.1",
    "ajv": "^6.12.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.7"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
