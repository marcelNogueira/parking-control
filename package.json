{
  "name": "parking_control",
  "version": "0.0.0",
  "description": "typescript backend test for mLabs",
  "main": "dist/main/server.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "npm run pre-build && rimraf dist && tsc -p tsconfig-build.json && npm run copy-schema",
    "pre-build": "ts-json-schema-generator -p \"./src/domain/models/**/*.ts\" --out \"./src/utils/validators/schema.json\"",
    "copy-schema": "cpx ./src/utils/validators/schema.json ./dist/utils/validators",
    "dev": "npm run build && nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "docker-up": "npm run build && docker-compose up",
    "docker-down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "jest --passWithNoTests --noStackTrace",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:ci": "npm test -- --coverage",
    "test:unit:verbose": "jest --passWithNoTests --runInBand --watch -c jest-unit-config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+link"
  },
  "author": "jmNogueira",
  "license": "",
  "homepage": "",
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "cpx": "^1.2.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-commit-msg-linter": "^2.4.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "mockdate": "^2.0.5",
    "prettier": "2.1.2",
    "pretty-quick": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-json-schema-generator": "^0.83.2",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.1.2",
    "validator": "^13.0.0"
  },
  "engines": {
    "node": "14.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
